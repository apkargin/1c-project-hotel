&НаКлиенте
Процедура ФамилияПриИзменении(Элемент)
    ОбновитьНаименование();
КонецПроцедуры

&НаКлиенте
Процедура ИмяПриИзменении(Элемент)
    ОбновитьНаименование();
КонецПроцедуры

&НаКлиенте
Процедура ОтчествоПриИзменении(Элемент)
    ОбновитьНаименование();
КонецПроцедуры

&НаКлиенте
Процедура ОбновитьНаименование()
    
    Фамилия = Объект.Фамилия;
    Имя = Объект.Имя;
    Отчество = Объект.Отчество;
    
    // Формируем полное наименование
    ПолноеНаименование = "";
    
    Если Не ПустаяСтрока(Фамилия) Тогда
        ПолноеНаименование = Фамилия;
    КонецЕсли;
    
    Если Не ПустаяСтрока(Имя) Тогда
        Если Не ПустаяСтрока(ПолноеНаименование) Тогда
            ПолноеНаименование = ПолноеНаименование + " " + Имя;
        Иначе
            ПолноеНаименование = Имя;
        КонецЕсли;
    КонецЕсли;
    
    Если Не ПустаяСтрока(Отчество) Тогда
        Если Не ПустаяСтрока(ПолноеНаименование) Тогда
            ПолноеНаименование = ПолноеНаименование + " " + Отчество;
        Иначе
            ПолноеНаименование = Отчество;
        КонецЕсли;
    КонецЕсли;
    
    // Устанавливаем значение в поле Наименование
    Объект.Наименование = ПолноеНаименование;
    
КонецПроцедуры