&НаКлиенте
Процедура ФамилияПриИзменении(Элемент)
    
    // Пересчитываем наименование при изменении ФИО
    ОбновитьНаименование();
    
КонецПроцедуры

&НаКлиенте
Процедура ИмяПриИзменении(Элемент)
    
    ОбновитьНаименование();
    
КонецПроцедуры

&НаКлиенте
Процедура ОтчествоПриИзменении(Элемент)
    
    ОбновитьНаименование();
    
КонецПроцедуры

&НаКлиенте
Процедура ОбновитьНаименование()
    
    // Формируем ФИО из полей
    Наименование = "";
    
    Если ЗначениеЗаполнено(Объект.Фамилия) Тогда
        Наименование = СокрЛП(Объект.Фамилия);
    КонецЕсли;
    
    Если ЗначениеЗаполнено(Объект.Имя) Тогда
        Наименование = Наименование + " " + СокрЛП(Объект.Имя);
    КонецЕсли;
    
    Если ЗначениеЗаполнено(Объект.Отчество) Тогда
        Наименование = Наименование + " " + СокрЛП(Объект.Отчество);
    КонецЕсли;
    
    // Устанавливаем в поле Наименование
    Объект.Наименование = Наименование;
    
КонецПроцедуры